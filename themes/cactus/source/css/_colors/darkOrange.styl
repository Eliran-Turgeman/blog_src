$color-meta-code = lighten($color-meta, 10%); // Slightly lighter peach for code metadata
$color-link = rgba(255, 227, 209, .6); // Transparent light peach for links
$color-text = #FFE3D1; // Light peach for text, ensuring clarity
$color-accent-1 = #EF9E84; // Warm, soft coral accent for key elements
$color-accent-2 = rgba(239, 158, 132, .8); // Semi-transparent soft coral accent
$color-accent-3 = #945C39; // Warm brown for secondary accents

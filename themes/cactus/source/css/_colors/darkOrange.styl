$color-background = #0F0E0E; // Deep olive green for the background
$color-footer-mobile-1 = darken($color-background, 2%); // Slightly darker shade for the footer
$color-footer-mobile-2 = darken($color-background, 10%); // Deeper tone for footer contrast
$color-background-code = lighten($color-background, 10%); // Slightly lighter olive green for code background

$color-background = #FFF5E1; // Light and soft background
$color-footer-mobile-1 = darken($color-background, 2%); // Slightly darker for footer background
$color-footer-mobile-2 = darken($color-background, 10%); // Darker footer shade
$color-background-code = darken($color-background, 2%); // Same darkening for code background
$color-border = #FF6969; // Soft but vibrant color for borders
$color-scrollbar = #C80036; // Strong red for a bold scrollbar
$color-meta = #0C1844; // Deep, almost navy blue for subtle elements
$color-meta-code = lighten($color-meta, 10%); // Slightly lighter for code metadata
$color-link = rgba(12, 24, 68, .4); // Transparent link color derived from the deep blue
$color-text = #0C1844; // Strong dark blue for text
$color-accent-1 = #FF6969; // Bright accent color for attention-grabbing elements
$color-accent-2 = rgba(255, 105, 105, .8); // Semi-transparent accent
$color-accent-3 = #C80036; // Bold red for secondary highlights
$color-quote = #FF6969; // Soft but bright color for quotes
$highlight = hexo-config("highlight") || "atelier-cave-light"; // Keeping highlight the same

// Fonts
$font-family-body = "Meslo LG", "JetBrains Mono", "IBM Plex Mono", "SFMono-Regular", "Menlo", "DejaVu Sans Mono", monospace
$font-family-mono = "Meslo LG", "JetBrains Mono", "IBM Plex Mono", "SFMono-Regular", "Menlo", "DejaVu Sans Mono", monospace
$font-size = 14px
$line-height = 1.725
$page-width = 0rem + (hexo-config("page_width") || 39)
// Logo
$logo-width = 0px + (hexo-config("logo.width") || 0)
$logo-height = 0px + (hexo-config("logo.height") || 0)
$logo-grayout = hexo-config("logo.grayout") || false
// Colors
$colors = hexo-config("colorscheme") || "dark"

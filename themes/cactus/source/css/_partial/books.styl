.books-index
  margin-bottom: 2.5rem

.books-index__title
  margin-bottom: 1.5rem

.books-index__empty
  opacity: 0.7

.books-list
  display: grid
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr))
  gap: 1.5rem

.book-card
  display: flex
  flex-direction: column
  gap: 0.75rem

.book-card__cover
  display: block
  max-width 140px
  margin 0
  align-self flex-start
  border: 1px solid $color-border
  border-radius: 6px
  overflow: hidden

.book-card__cover img
  width: 100%
  display: block

.book-card__cover--placeholder
  width: 100%
  padding-top: 140%
  background: $color-background-code

.book-card__title
  margin: 0

.book-card__subtitle
  margin: 0.35rem 0 0
  opacity: 0.75

.book-card__status
  margin: 0.35rem 0 0
  font-size: 0.9rem
  text-transform: capitalize
  opacity: 0.7

.book-card__excerpt
  margin: 0.5rem 0 0

.book-card__genres
  margin: 0.35rem 0 0
  font-size: 0.9rem
  opacity: 0.7

.book
  display: flex
  flex-direction: column
  gap: 1.5rem

.book__header
  display: grid
  grid-template-columns: minmax(90px, 140px) 1fr
  gap: 1.5rem
  align-items: left

.book__cover
  border: 1px solid $color-border
  border-radius: 8px
  overflow: hidden

.book__cover img
  width: 100%
  display: block

.book__cover--placeholder
  width: 100%
  padding-top: 140%
  background: $color-background-code

.book__title
  margin: 0

.book__subtitle
  margin: 0.5rem 0 0
  opacity: 0.75

.book__status
  margin: 0.5rem 0 0
  font-size: 0.95rem
  text-transform: capitalize
  opacity: 0.7

.book__series
  margin: 0.35rem 0 0
  opacity: 0.7

.book-meta
  list-style: none
  padding: 0
  margin: 0
  display: grid
  gap: 0.35rem

.book__cta
  padding: 1rem 1.25rem
  border: 1px solid $color-border
  border-radius: 8px

.book__links
  display: flex
  flex-wrap: wrap
  gap: 0.75rem
  margin-top: 0.75rem

.book__link
  padding: 0.35rem 0.75rem
  border: 1px solid $color-border
  border-radius: 999px
  font-size: 0.95rem

.book__toc
  padding: 1rem 1.25rem
  border: 1px solid $color-border
  border-radius: 8px

.book__toc-list
  margin: 0.75rem 0 0
  padding-left: 1.25rem

.book__toc-item
  margin-bottom: 0.75rem

.book__toc-subtitle
  margin-top: 0.25rem
  opacity: 0.75

.book__toc-summary
  margin-top: 0.25rem
  font-size: 0.95rem
  opacity: 0.75

.book__chapters
  display: flex
  flex-direction: column
  gap: 2rem

.book__chapter-title
  margin-bottom: 0.35rem

.book__chapter-subtitle
  margin-top: 0
  opacity: 0.75

.book-chapter
  display: flex
  flex-direction: column
  gap: 1.5rem

.book-chapter__header
  display: flex
  flex-direction: column
  gap: 0.5rem

.book-chapter__series
  margin: 0
  font-size: 0.95rem
  opacity: 0.7

.book-chapter__title
  margin: 0

.book-chapter__subtitle
  margin: 0
  opacity: 0.75

.book-chapter__cover
  width: min(240px, 60%)
  border: 1px solid $color-border
  border-radius: 8px
  overflow: hidden

.book-chapter__cover img
  width: 100%
  display: block

.book-chapter__nav
  display: grid
  grid-template-columns: 1fr 1fr
  gap: 1rem
  padding-top: 1rem
  border-top: 1px solid $color-border

.book-chapter__nav-link
  display: inline-flex
  align-items: center
  gap: 0.35rem

.book-chapter__nav-link:last-child
  justify-self: end

.book-chapter__nav-spacer
  display: block

// Chapter content images: scale up (if needed) and stay centered
article.book-chapter .content img
  display: block
  width: 100%
  height: auto
  margin-left: auto
  margin-right: auto

@media (max-width: 640px)
  .book__header
    grid-template-columns: 1fr
